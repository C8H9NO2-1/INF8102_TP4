{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "S3 bucket",
    "Resources": {
        "S3Bucket": {
            "DeletionPolicy": "Retain",
            "Type": "AWS::S3::Bucket",
            "Description": "S3 bucket creation",
            "Properties": {
                "BucketName": "polystudents352-460783431840",
                "AccessControl": "Private",
                "PublicAccessBlockConfiguration": {
                    "BlockPublicAcls": true,
                    "BlockPublicPolicy": true,
                    "IgnorePublicAcls": true,
                    "RestrictPublicBuckets": true
                },
                "BucketEncryption": {
                    "ServerSideEncryptionConfiguration": [
                        {
                            "ServerSideEncryptionByDefault": {
                                "SSEAlgorithm": "aws:kms",
                                "KMSMasterKeyID": "arn:aws:kms:ca-central-1:460783431840:key/ced8eb49-7751-4195-9498-9d0559439047"
                            }
                        }
                    ]
                },
                "VersioningConfiguration": {
                    "Status": "Enabled"
                },
                "ReplicationConfiguration": {
                    "Role": "arn:aws:iam::460783431840:role/LabRole",
                    "Rules": [
                        {
                            "Destination" : {
                                "Bucket" : "arn:aws:s3:::polystudents352-460783431840-back",
                            },
                            "Status" : "Enabled"
                        }
                    ]
                }
            }
        },
        "LogPolicy": {
            "Type" : "AWS::S3::BucketPolicy",
            "Properties" : {
                "Bucket" : "polystudents352-460783431840",
                "PolicyDocument" : {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Sid": "1",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "s3.amazonaws.com"
                            },
                            "Action": [
                                "s3:GetReplicationConfiguration",
                                "s3:ListBucket"
                            ],
                            "Resource": "arn:aws:s3:::polystudents352-460783431840"
                        },
                        {
                            "Sid": "2",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "s3.amazonaws.com"
                            },
                            "Action": [
                                "s3:GetObjectVersion",
                                "s3:GetObjectVersionAcl",
                                "s3:GetObjectVersionTagging"
                            ],
                            "Resource": "arn:aws:s3:::polystudents352-460783431840/*"
                        },
                        {
                            "Sid": "AwsCloudTrailAclCheck",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "cloudtrail.amazonaws.com"
                            },
                            "Action": "s3:GetBucketAcl",
                            "Resource": "arn:aws:s3:::polystudents352-460783431840"
                        },
                        {
                            "Sid": "AwsCloudTrailWrite",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "cloudtrail.amazonaws.com"
                            },
                            "Action": [
                                "s3:PutObject",
                                "s3:DeleteObject",
                                "s3:GetObject"
                            ],
                            "Resource": "arn:aws:s3:::polystudents352-460783431840/AWSLogs/460783431840/*"
                        }
                    ]
                }
            }
        },
        "TestTrail":  {
            "Type" : "AWS::CloudTrail::Trail",
            "Properties" : {
                "IsLogging" : true,
                "S3BucketName" : "polystudents352-460783431840",
                "TrailName" : "polystudent-lab4-trail"
            },
            "DependsOn": ["LogPolicy"]
        }
    },
    "Outputs": {
        "S3Bucket": {
            "Description": "Bucket Created! ;)",
            "Value": {
                "Ref": "S3Bucket"
            }
        }
    }
}
